{
	"$schema": "https://opencode.ai/config.json",
	"autoupdate": true,
	"theme": "catppuccin-macchiato",
	"permission": {
		"read": {
			"*": "allow",
			"*.env": "deny",
			"*.env.*": "deny",
			"*.envrc": "deny",
			"secrets/*": "deny"
		},
		"external_directory": {
			"/Users/gil0mendes/.config/opencode/*": "allow"
		}
	},
	"enabled_providers": ["openai"],
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		},
		"grep_app": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		}
	}
}
